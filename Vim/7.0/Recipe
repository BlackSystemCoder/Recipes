compile_version=1.8.0
url="ftp://ftp.vim.org/pub/vim/unix/vim-7.0.tar.bz2"
dir='vim70'
recipe_type=configure

configure_options=(
	"--prefix=$target"
	"--enable-gui=no"
)

pre_link() {
	ln -s vim $target/bin/vi
}
