   --openssldir=$goboSettings/ssl
   --libdir=lib
   zlib-dynamic
)

make_variables=(
   MANDIR=$target/man
   HTMLDIR=$target/doc/html
   INSTALLTOP=$target
)

install_variables=(
   OPENSSLDIR=$target/Resources/Defaults/Settings/ssl
)
