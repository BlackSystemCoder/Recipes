    "build/src/libjasper/libjasper.so:lib/"
    "build/src/libjasper/libjasper.so.4:lib/"
    "build/src/libjasper/libjasper.so.4.0.0:lib/"
    "build/src/appl/jasper:bin/"
    "build/src/appl/imginfo:bin/"
    "build/src/appl/imgcmp:bin/"
)
