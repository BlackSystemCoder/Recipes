# Recipe (MakeRecipe) for FritzWlanUSB by Christian Holzberger
compile_version=1.10.0
url="http://www.avm.de/files/cardware/fritzwlanusb.stick/linux/suse.10.2/fwlanusb-1.00.00.tar.gz"
file_md5="ef8bd974cf20c1e9f2ffd182e6ed826c"
file_size="337182"
recipe_type=makefile
makefile='Makefile'
dir="fritz/src"

unmanaged_files=(
	$goboModules/$(uname -r)/extra/fwlanusb.ko
)

pre_build () { 
    echo "Making the module 2.6.23 compatible"
    OBJ=$(find ../. -name '*lib.o')
    for i in $OBJ; do
        echo Patching $i ...
        mv $i $i.old
        objcopy -L memcmp \
        -L memcpy \
        -L memmove \
        -L memset \
        -L strcat \
        -L strcmp \
        -L strcpy \
        -L strlen \
        -L strncmp \
        -L strncpy \
        $i.old $i
    done
}

post_install(){
	# Make note that this is a third party module which
	# needs to be recompiled when Linux is.
	mkdir -p ${target}/Shared/Compile/Recompile/Linux
	touch ${target}/Shared/Compile/Recompile/Linux/FritzWlanUSB
}
