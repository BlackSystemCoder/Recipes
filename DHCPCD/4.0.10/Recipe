compile_version=1.9.0
url="http://roy.marples.name/downloads/dhcpcd/dhcpcd-4.0.10.tar.bz2"
file_size=52515
file_md5=52d0e788743368034a4afff858117770
recipe_type=makefile

make_variables=(
   PREFIX="$target"
   MANPREFIX="$target"
   CFLAGS="-D RUNDIR=\\\"$variable_target/run\\\""
   SYSCONFDIR="$settings_target"
   DBDIR="$variable_target/db"
)

pre_link() {
   chmod +x "$settings_target/dhcpc/dhcpcd.exe"
}
