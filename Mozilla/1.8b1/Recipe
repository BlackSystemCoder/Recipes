dir='mozilla'
recipe_type=configure
configure_options=(
  "--enable-crypto"
  "--disable-tests"
  "--disable-debug"
  "--enable-strip"
  "--with-pthreads"
  "--enable-default-toolkit=gtk2"
  "--with-x"
  "--enable-freetype2"
  "--with-system-zlib"
  "--with-system-jpeg"
  "--with-system-png"
  # "--with-system-mng"
  "--disable-xft"
  "--enable-pango"
  "--disable-gnomevfs"
  "--disable-gnomeui"
  "--with-libIDL-prefix=/Programs/LibIDL/Current/"
  "--enable-application=suite"
                           #Options include:
                           # suite
                           # browser (Firefox)
                           # mail (Thunderbird)
                           # composer
                           # calendar
                           # xulrunner
                           # macbrowser (Camino)
                           # standalone (use this for standalone
                           #  xpcom/xpconnect or to manually drive a build)
)
